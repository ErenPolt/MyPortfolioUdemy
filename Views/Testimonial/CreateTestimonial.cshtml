@model Testimonial

@{
    ViewData["Title"] = "CreateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title">Referans Ekleme Sayfası</div>
				</div>
				<div class="card-body">


					<form method="post">
						<label>İsim</label>
						<input type="text" asp-for="NameSurname" class="form-control" />
						<br />
						<label>Meslek</label>
						<input type="text" asp-for="Title" class="form-control" />
						<br />
						<label>Yorum</label>
						<textarea rows="4" class="form-control" asp-for="Description"></textarea>
						<br />
						<label>Görsel</label>
						<input type="text" asp-for="ImageUrl" class="form-control" />
						<br />
						<button class="btn btn-primary">Ekle</button>
					</form>
				</div>
			</div>

		</div>
	</div>

</div>
</div>


