@model List<Portfolio>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Projelerim</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Proje Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Deneyimler ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Proje İsmi</th>
									<th scope="col">Çerçeve</th>
									<th scope="col">Görsel</th>
									<th scope="col">Link</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>

										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.SubTitle</td>
										<td>@item.ImageUrl</td>
										<td>@item.Url</td>
										<td>@item.Description</td>
										<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Portfolio/UpdatePortfolio/@item.PortfolioId" class="btn btn-success">Güncelle</a></td>

									</tr>
								}
							</tbody>
						</table>
						<a href="/Portfolio/CreatePortfolio/" class="btn btn-primary">Proje Ekle</a>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>


