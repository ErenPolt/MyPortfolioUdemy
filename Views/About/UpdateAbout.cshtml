@model About

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Hakkımda Güncelleme Sayfası</div>
					</div>
					<div class="card-body">


						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Başlık</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Ön Bilgi</label>
							<input type="text" asp-for="SubDescription" class="form-control" />
							<br />
							<label>Detaylı Bilgi</label>
							<input type="text" asp-for="Details" class="form-control" />
							<br />
							<button class="btn btn-primary">Güncelle</button>
						</form>
					</div>
				</div>

			</div>
		</div>

	</div>
</div>

